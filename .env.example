# API Keys - Replace with your actual API keys (NEVER commit real keys!)
GROQ_API_KEY=your_groq_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# API Configuration
GROQ_MODEL=llama3-8b-8192
GROQ_MAX_TOKENS=1024
GROQ_TEMPERATURE=0.7

OPENROUTER_MODEL=qwen/qwen3-32b
OPENROUTER_MAX_TOKENS=1024
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Indici API Configuration
INDICI_API_BASE_URL=http://localhost:5010
INDICI_API_TIMEOUT=30

# Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000
MCP_SERVER_NAME=indici-reports-mcp
MCP_SERVER_VERSION=1.0.0

WEB_INTERFACE_HOST=0.0.0.0
WEB_INTERFACE_PORT=10000
WEB_INTERFACE_DEBUG=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# LLM Features
ENABLE_LLM_INTENT_DETECTION=true
ENABLE_LLM_RESPONSE_ENHANCEMENT=true
FALLBACK_TO_RULES=true
INTENT_DETECTION_TEMPERATURE=0.1
RESPONSE_ENHANCEMENT_TEMPERATURE=0.3

# Microsoft Teams SSO Configuration (Replace with your Azure AD app details)
AZURE_CLIENT_ID=your_azure_ad_client_id_here
AZURE_CLIENT_SECRET=your_azure_ad_client_secret_here
AZURE_TENANT_ID=your_azure_ad_tenant_id_here
AZURE_AUTHORITY=https://login.microsoftonline.com/your_tenant_id_here
AZURE_SCOPE=https://graph.microsoft.com/.default
TEAMS_APP_ID=your_teams_app_id_here
